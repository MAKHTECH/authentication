# syntax=docker/dockerfile:1.4

# Development Dockerfile с Air для hot reload
FROM golang:1.25-alpine

# Устанавливаем зависимости для git, air и CGO (gcc для lib/pq)
RUN --mount=type=cache,target=/var/cache/apk \
    apk add --no-cache git gcc musl-dev

# Устанавливаем Air для hot reload
RUN go install github.com/air-verse/air@latest

WORKDIR /app

# Копируем файлы модулей для загрузки зависимостей
COPY go.mod go.sum ./

# Загрузка зависимостей
RUN --mount=type=cache,target=/go/pkg/mod \
    --mount=type=cache,target=/root/.cache/go-build \
    go mod download -x

# Копируем конфигурацию Air
COPY .air.toml ./

# Копируем исходный код
COPY sso/ ./sso/
COPY protos/ ./protos/

# Создаём директорию для временных файлов
RUN mkdir -p /app/tmp

# Команда запуска Air
CMD ["air", "-c", ".air.toml"]

